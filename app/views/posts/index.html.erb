<div class="post-list">
  <h1>Posts</h1>
</div>
<div class="wrapper">
  <div class="title">
      <% @posts.each do |post| %>
        <h2><%= post.title %></h2>
  </div>
  <div class = "body">
          <%= post.body %>
  </div>
  <div class = "author">
          <h5>Author: <%= post.author %></h5>
  </div>
  <div class="actions">
          <%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'New Post', new_post_path %>
  </div>
      <% end %>
</div>
